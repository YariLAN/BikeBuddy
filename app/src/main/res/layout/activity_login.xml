<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#201E28"
        tools:context=".ui.LoginActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="#FFB41D"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            android:layout_marginTop="88dp"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toTopOf="@+id/email_login"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/email_login"
            android:hint="@string/email"
            android:textColor="#9DCAF1"
            android:textColorHint="#9DCAF1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toTopOf="@+id/password"
            android:layout_marginBottom="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.984"/>
    <Button
            android:text="Sign In"
            android:layout_width="130dp"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginBottom="284dp"
            android:textSize="12sp" android:textColor="#9DCAF1"
            android:background="#673AB7" app:layout_constraintTop_toBottomOf="@+id/resetPassword"
            app:layout_constraintVertical_bias="1.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="@string/password"
            android:id="@+id/password"
            android:textColorLink="#9DCAF1" android:textColorHint="#9DCAF1"
            android:textColor="#9DCAF1" android:textColorHighlight="#9DCAF1" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintBottom_toTopOf="@+id/resetPassword" android:layout_marginBottom="16dp"
            android:minHeight="48dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Sign Up"
            android:background="#201E28"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/register"
            tools:ignore="MissingConstraints" android:drawableTint="#000000"
            android:textStyle="italic" android:textColor="#9DCAF1" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.73"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="42dp"
            android:layout_marginTop="195dp" app:layout_constraintTop_toBottomOf="@+id/button"/>
    <TextView
            android:text="Don't have an Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textColor="#9DCAF1" app:layout_constraintEnd_toStartOf="@+id/register"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.836"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="56dp" android:layout_marginTop="209dp"
            app:layout_constraintTop_toBottomOf="@+id/button"/>
    <Button
            android:text="Forgot password?"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/resetPassword"
            android:textSize="12sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:textColor="#9DCAF1"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.461"/>

</androidx.constraintlayout.widget.ConstraintLayout>